<VirtualHost *>
#ifdef APACHE_MAINDOMAIN
    ServerName @APACHE_ROOTDOMAIN@
#else
    ServerName @APACHE_SUBDOMAIN@.@APACHE_ROOTDOMAIN@
#endif
#ifdef APACHE_OVERRIDE_SUBDOMAIN
        DocumentRoot /aura/accounts/@AURA_USER_CLASS@/@AURA_USER_NAME@/sites/@APACHE_ROOTDOMAIN@/@APACHE_OVERRIDE_SUBDOMAIN@
#else
        DocumentRoot /aura/accounts/@AURA_USER_CLASS@/@AURA_USER_NAME@/sites/@APACHE_ROOTDOMAIN@/@APACHE_SUBDOMAIN@
#endif
    Options +Indexes
    Header set X-BinOC "port=true"

#ifdef APACHE_OVERRIDE_SUBDOMAIN
    <Directory "/aura/accounts/@AURA_USER_CLASS@/@AURA_USER_NAME@/sites/@APACHE_ROOTDOMAIN@/@APACHE_OVERRIDE_SUBDOMAIN@">
#else
    <Directory "/aura/accounts/@AURA_USER_CLASS@/@AURA_USER_NAME@/sites/@APACHE_ROOTDOMAIN@/@APACHE_SUBDOMAIN@">
#endif
        Require all granted
#ifdef APACHE_ENABLE_PERL
        Options +ExecCGI
#ifdef APACHE_ENABLE_MXR
        AddHandler cgi-script .cgi .pl search ident diff find source

        <Files ~ (find$|search$|ident$|diff$|source$)>
            SetHandler cgi-script
            Options ExecCGI
            Require all granted
        </Files>
        Header set X-Powered-by "Apache/PerlCGI"
#else
        AddHandler cgi-script .cgi .pl
        Header set X-Powered-by "Apache/PerlCGI"
#endif
#endif
    </Directory>

</VirtualHost>